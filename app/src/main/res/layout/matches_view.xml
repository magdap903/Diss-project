<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CVMatches"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/CVMatchDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MatchDateOrDays"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/CVMatchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MatchName"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CVMatchLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MatchLocation"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/CVMatchDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MatchDistance"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/CVMatchForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="MatchForm"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/CVMatchAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="AgeRange"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/CVapplyMatch"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:padding="2dp"
            android:text="APPLY"
            android:layout_gravity="center"
            android:visibility="visible"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/buttons"/>

        <TextView
            android:id="@+id/CVMaxPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Max number of Participants"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:visibility="gone"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match"
                android:textSize="20sp"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>