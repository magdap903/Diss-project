<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59BFBFBF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ApplySuccess">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="You have successfully applied to the volunteering event."
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Button
        android:id="@+id/otherMatchesBt"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="View other matches"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/buttons" />

    <Button
        android:id="@+id/accountBt"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:text="Account Page"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signoutBt"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:text="Signout"
        android:textSize="18sp" />

</LinearLayout>