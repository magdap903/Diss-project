<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CVEvents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/CVEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="EventDateOrDays"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/CVEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="EventName"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CVEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="EventLocation"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/CVEventForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="EventForm"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/CVEventAgeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="EventAgeRange"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/CVmoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:padding="2dp"
                android:text="more_info"
                android:textAlignment="center"
                android:textSize="17sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageButton
                android:id="@+id/editEvent"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_edit_foreground" />

            <ImageButton
                android:id="@+id/deleteEvent"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_delete_foreground"/>

        </LinearLayout>
    </LinearLayout>






</androidx.cardview.widget.CardView>